{
  "$schema": "https://turborepo.com/schema.json",
  "globalPassThroughEnv": ["SKIP_ENV_VALIDATION"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "generateOpenApiDocs": {
      "persistent": false,
      "outputs": ["dist/openapi.json"]
    },
    "generateOpenApiClient": {
      "dependsOn": ["^generateOpenApiDocs"],
      "inputs": ["src/**", "build.gradle", "settings.gradle"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true
    },
    "dev:bootRun": {
      "persistent": true
    },
    "dev:generateOpenApiDocs": {
      "inputs": ["src/**", "build.gradle", "settings.gradle"],
      "outputs": ["dist/openapi.json"]
    },
    "dev:generateOpenApiClient": {
      "dependsOn": ["^dev:generateOpenApiDocs"],
      "inputs": ["orval.config.js"],
      "outputs": ["dist/**"]
    }
  }
}
